{
  "name": "lutris-gamepad-ui",
  "private": true,
  "version": "0.1.11",
  "main": "electron.cjs",
  "type": "module",
  "description": "A simple, TV-friendly, gamepad-navigable frontend for the Lutris game launcher on Linux.",
  "author": {
    "name": "Andrew-LD",
    "email": "andrewld@protonmail.com"
  },
  "license": "GPL-3.0-only",
  "homepage": "https://github.com/andrew-ld/lutris-gamepad-ui/",
  "scripts": {
    "dev": "vite",
    "start": "IS_DEV=1 concurrently \"npm run dev\" \"npm run electron:dev\"",
    "start:prod": "npm run build:vite && electron36 electron.cjs",
    "start:prod-wayland": "npm run build:vite && electron36 electron.cjs --ozone-platform=wayland",
    "build": "vite build && npm run electron:build",
    "build:vite": "vite build",
    "preview": "vite preview",
    "electron:dev": "wait-on http://localhost:5173 && electron .",
    "electron:build": "electron-builder"
  },
  "dependencies": {
    "paclient": "git+https://github.com/andrew-ld/paclient.git#450fc5046e2bb6b3ce7920211ec89bc3748d0463"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "concurrently": "^9.1.2",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-scan": "^0.4.3",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.electron.${name}",
    "productName": "lutris gamepad ui",
    "files": [
      "dist/**/*",
      "electron.cjs",
      "package.json",
      "electron_preload.cjs",
      "lutris_wrapper.sh",
      "lutris_wrapper.py"
    ],
    "asarUnpack": [
      "lutris_wrapper.sh",
      "lutris_wrapper.py",
      "electron_preload.cjs"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "linux": {
      "target": "AppImage",
      "category": "game",
      "icon": "src/resources/icon.svg"
    }
  }
}
