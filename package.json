{
  "name": "lutris-gamepad-ui",
  "private": true,
  "version": "0.1.0",
  "main": "electron.js",
  "author": {
    "name": "Andrew-LD",
    "email": "andrewld@protonmail.com"
  },
  "homepage": "https://github.com/andrew-ld/lutris-gamepad-ui/",
  "scripts": {
    "dev": "vite",
    "start": "concurrently \"npm run dev\" \"npm run electron:dev\"",
    "build": "vite build && npm run electron:build",
    "preview": "vite preview",
    "electron:dev": "wait-on http://localhost:5173 && electron .",
    "electron:build": "electron-builder"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.12",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.electron.${name}",
    "productName": "lutris gamepad ui",
    "files": [
      "dist/**/*",
      "electron.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}