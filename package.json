{
  "name": "lutris-gamepad-ui",
  "private": true,
  "version": "0.1.3",
  "main": "electron.js",
  "author": {
    "name": "Andrew-LD",
    "email": "andrewld@protonmail.com"
  },
  "license": "GPL-3.0-only",
  "homepage": "https://github.com/andrew-ld/lutris-gamepad-ui/",
  "scripts": {
    "dev": "vite",
    "start": "IS_DEV=1 concurrently \"npm run dev\" \"npm run electron:dev\"",
    "build": "vite build && npm run electron:build",
    "build:vite": "vite build",
    "preview": "vite preview",
    "electron:dev": "wait-on http://localhost:5173 && electron .",
    "electron:build": "electron-builder"
  },
  "dependencies": {
    "paclient": "git+https://github.com/andrew-ld/paclient.git"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "concurrently": "^9.1.2",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.electron.${name}",
    "productName": "lutris gamepad ui",
    "files": [
      "dist/**/*",
      "electron.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
