{
  "name": "lutris-gamepad-ui",
  "private": true,
  "version": "0.1.24",
  "main": "electron.cjs",
  "type": "module",
  "description": "A simple, TV-friendly, gamepad-navigable frontend for the Lutris game launcher on Linux.",
  "author": {
    "name": "Andrew-LD",
    "email": "andrewld@protonmail.com"
  },
  "license": "GPL-3.0-only",
  "homepage": "https://github.com/andrew-ld/lutris-gamepad-ui/",
  "scripts": {
    "dev": "vite",
    "start": "IS_DEV=1 concurrently \"npm run dev\" \"npm run electron:dev\"",
    "start:prod": "npm run build:vite && electron37 electron.cjs",
    "start:prod-wayland": "npm run build:vite && electron37 electron.cjs --ozone-platform=wayland",
    "start:prod-steamdeck": "npm run build:vite && gamescope -W 1280 -w 1280 -H 800 -h 800 -- electron37 electron.cjs",
    "build": "vite build && npm run electron:build",
    "build:vite": "vite build",
    "preview": "vite preview",
    "electron:dev": "wait-on http://localhost:5173 && electron .",
    "electron:build": "electron-builder"
  },
  "dependencies": {
    "@homebridge/dbus-native": "github:andrew-ld/dbus-native#b1e7adc7daf54a3c1d23912cb020832085322109",
    "paclient": "github:andrew-ld/paclient#450fc5046e2bb6b3ce7920211ec89bc3748d0463"
  },
  "devDependencies": {
    "@babel/parser": "^7.28.3",
    "@babel/plugin-syntax-jsx": "^7.27.1",
    "@babel/traverse": "^7.28.3",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.0",
    "electron": "^37.3.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-scan": "^0.4.3",
    "vite": "^7.1.2",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.electron.${name}",
    "productName": "lutris gamepad ui",
    "files": [
      "dist/**/*",
      "electron.cjs",
      "electron_preload.cjs",
      "package.json",
      "lutris_wrapper.sh",
      "lutris_wrapper.py",
      "src_backend/**/*"
    ],
    "asarUnpack": [
      "lutris_wrapper.sh",
      "lutris_wrapper.py",
      "electron_preload.cjs"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "linux": {
      "target": "AppImage",
      "category": "game",
      "icon": "src_frontend/resources/icon.svg"
    }
  }
}
